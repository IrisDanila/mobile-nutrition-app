{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ES2021"
    ],
    "moduleResolution": "node",
    "module": "ESNext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2021",
    "types": [
      "react",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "./src",
    "App.tsx",
    "./types"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
